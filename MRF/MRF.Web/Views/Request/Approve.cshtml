@{
    ViewData["Title"] = "Approved";
}

@if (ViewData["Message"] != null)
{
    <div class="container center-content">
        <div class="row">
            <div class="col text-center mt-5">
                <img src="~/images/Approved.png" class="img-fluid" alt="Approved">
            </div>
        </div>
        <div class="row mt-3">
            <div class="col text-center">
                <div role="alert" style="font-weight: bold; font-family: Arial, sans-serif;">
                    MRF has been approved successfully!
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <div role="alert" style="font-weight: bold; font-family: Arial, sans-serif;">
                    Confirmation has been sent to concerned persons!
                </div>
            </div>
        </div>
    </div>
}
